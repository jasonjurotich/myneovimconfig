keybinds clear-defaults=true {
    shared_except "locked" {
        bind "Alt j" { NewTab; SwitchToMode "normal"; }
        bind "Alt u" { CloseTab; SwitchToMode "normal"; }
        bind "Alt l" { GoToNextTab; SwitchToMode "normal"; }
        bind "Alt h" { GoToPreviousTab; SwitchToMode "normal";}

        bind "Alt k" { NewPane "right"; SwitchToMode "normal"; }
        bind "Alt i" { CloseFocus; SwitchToMode "normal"; }

        bind "Ctrl h" { MoveFocus "left"; }
        bind "Ctrl l" { MoveFocus "right"; }
        
        bind "Ctrl Alt h" { Resize "Increase"; }
        bind "Ctrl Alt l" { Resize "Decrease"; }

        bind "Alt p" { EditScrollback; }
    }

}


// Plugin aliases - can be used to change the implementation of Zellij
